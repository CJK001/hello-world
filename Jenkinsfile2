node {
    stage('SCM-Checkout') {
	    git branch: 'main', credentialsId: 'jenkins-cred', url: 'https://github.com/CJK001/hello-world.git'
	}
    stage('Maven-compile') {
        def mvnHome = tool name: 'maven_home', type: 'maven'
        def mvnCMD = "${mvnHome}/bin/mvn"
        sh "${mvnCMD} compile"
	}
    stage('Maven-Package') {
        def mvnHome = tool name: 'maven_home', type: 'maven'
        def mvnCMD = "${mvnHome}/bin/mvn"
        sh "${mvnCMD} package"
	}
}
